{
    "$schema":  "https://json-schema.org/draft/2020-12/schema",
    "title":  "JP-AlgHint v1 sample",
    "type":  "object",
    "required":  [
                     "id",
                     "task",
                     "statement_ja",
                     "io_spec",
                     "instance",
                     "tests",
                     "reference",
                     "hints",
                     "tags",
                     "license"
                 ],
    "properties":  {
                       "id":  {
                                  "type":  "string",
                                  "pattern":  "^(GCD|BS|INT|BFS|KNAP|DSIM|MST|RSQ|UF)_\\d{8}_\\d{5}$"
                              },
                       "version":  {
                                       "type":  "string"
                                   },
                       "lang":  {
                                    "type":  "string"
                                },
                       "task_family":  {
                                           "type":  "string"
                                       },
                       "answer_type":  {
                                           "type":  "string"
                                       },
                       "task":  {
                                    "type":  "string"
                                },
                       "statement_ja":  {
                                            "type":  "string",
                                            "minLength":  10
                                        },
                       "io_spec":  {
                                       "type":  "object",
                                       "required":  [
                                                        "input",
                                                        "output"
                                                    ],
                                       "properties":  {
                                                          "input":  {
                                                                        "type":  "string"
                                                                    },
                                                          "output":  {
                                                                         "type":  "string"
                                                                     }
                                                      }
                                   },
                       "instance":  {
                                        "type":  "object",
                                        "required":  [
                                                         "seed",
                                                         "template_id",
                                                         "params"
                                                     ],
                                        "properties":  {
                                                           "seed":  {
                                                                        "type":  "integer"
                                                                    },
                                                           "template_id":  {
                                                                               "type":  "string"
                                                                           },
                                                           "params":  {
                                                                          "type":  "object"
                                                                      }
                                                       }
                                    },
                       "tests":  {
                                     "type":  "array",
                                     "minItems":  2,
                                     "items":  {
                                                   "type":  "object",
                                                   "required":  [
                                                                    "in",
                                                                    "out"
                                                                ],
                                                   "properties":  {
                                                                      "in":  {
                                                                                 "type":  "string"
                                                                             },
                                                                      "out":  {
                                                                                  "type":  "string"
                                                                              }
                                                                  }
                                               }
                                 },
                       "reference":  {
                                         "type":  "object",
                                         "properties":  {
                                                            "py":  {
                                                                       "type":  "string"
                                                                   },
                                                            "c":  {
                                                                      "type":  "string"
                                                                  }
                                                        }
                                     },
                       "hints":  {
                                     "type":  "array",
                                     "minItems":  1,
                                     "maxItems":  3,
                                     "items":  {
                                                   "type":  "object",
                                                   "required":  [
                                                                    "level",
                                                                    "text"
                                                                ],
                                                   "properties":  {
                                                                      "level":  {
                                                                                    "type":  "integer"
                                                                                },
                                                                      "text":  {
                                                                                   "type":  "string"
                                                                               }
                                                                  }
                                               }
                                 },
                       "distractors":  {
                                           "type":  "array",
                                           "items":  {
                                                         "type":  "object",
                                                         "required":  [
                                                                          "code",
                                                                          "desc"
                                                                      ],
                                                         "properties":  {
                                                                            "code":  {
                                                                                         "type":  "string"
                                                                                     },
                                                                            "desc":  {
                                                                                         "type":  "string"
                                                                                     }
                                                                        }
                                                     }
                                       },
                       "witness":  {
                                       "type":  "object"
                                   },
                       "difficulty":  {
                                          "type":  "object",
                                          "properties":  {
                                                             "score":  {
                                                                           "type":  "number"
                                                                       },
                                                             "basis":  {
                                                                           "type":  "string"
                                                                       }
                                                         }
                                      },
                       "tags":  {
                                    "type":  "array",
                                    "items":  {
                                                  "type":  "string"
                                              }
                                },
                       "license":  {
                                       "type":  "string"
                                   }
                   }
}
